# GitHub Secrets Scanner Configuration
# Copy this file to .env and fill in your values

# GitHub Authentication
# Option 1: Personal Access Token (simplest method)
GITHUB_TOKEN=your_github_token_here

# Option 2: GitHub App Authentication
# GITHUB_APP_ID=12345
# GITHUB_INSTALLATION_ID=67890
# Note: The app private key should be placed in ./keys/github.pem

# GitHub Enterprise Configuration
# GITHUB_BASE_URL=https://github.yourcompany.com/api/v3/

# Scanner Configuration
SCANNER_CONCURRENCY=5
SCANNER_BATCH_SIZE=10
SCANNER_MAX_DEPTH=1000
SCANNER_SCAN_PRIVATE=true
SCANNER_RATE_LIMIT=5000
SCANNER_PAUSE_TIME=60

# Repository Filtering
EXCLUDE_REPOS=archived-repo,test-repo
EXCLUDE_ORGS=third-party-org

# Debug Mode
DEBUG_MODE=false